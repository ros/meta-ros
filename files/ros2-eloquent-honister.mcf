OE_Branch = 'honister'

ROS_Distribution = 'eloquent'

# One of 'full', 'best-effort', 'contrib', 'unsupported'
SupportLevel = 'best-effort' # ROS2 Eloquent is EOL (final sync on 2020-12-14)

